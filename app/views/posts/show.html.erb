<p>
  <strong style="font-size: 35px;">Title:</strong>
  <input type="text" style="font-size: 30px; width: 30%;" value="<%= @post.title %>" name="post[title]">
</p>

<p>
  <strong style="font-size: 35px;">Description:</strong>
  <textarea style="font-size: 25px; width: 100%;" rows="30"><%= @post.description %></textarea>
</p>

<% if @post.image.present? %>
  <p>
    <strong>Image:</strong>
    <%= image_tag @post.image.url, width: "500px", height: "300px" %>
  </p>
<% end %>

<% if @post.video.present? %>
  <p>
    <strong>Video:</strong>
    <%= video_tag @post.video.url %>
  </p>
<% end %>

<%= button_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to log out?' } %> | |
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
